<AnchorLayoutExample>:
    #right, left, center
    anchor_x : "left" 
    #bottom, top, center
    anchor_y : "top"
    BoxLayout:
        size_hint : 0.2, 0.2
        Button:
            text: "A"
        Button:
            text: "B"
        Button:
