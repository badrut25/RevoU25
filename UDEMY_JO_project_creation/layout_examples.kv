<BoxLayoutExample>:
    orientation: "horizontal" #"vertical"
    Button:
        text : "A"
        color: 1, 1, 0, 1
        size_hint : 0.5, 0.5 #None, None #1, 0.5
        #size : "100dp", "60dp" #P x L
        # width : "650dp"
        # height : "60dp"
        pos_hint : {"center_y" : 0.5}   #x, center_x, right #y, center_y, top
    BoxLayout:
        orientation: "vertical" 
        spacing : "10dp"
        Button:
            text : "B1"
            color: 0, 1, 0, 1
            # size_hint : 1, 2
        Button:
            text : "B2"
            color: 0, 1, 0, 1
        Button:
            text : "B3"
            color: 0, 1, 0, 1
        Button:
            text : "B3"
            color: 0, 1, 0, 1
    Label:
        text : "C"
        color: 0, 1, 1, 1
        # size_hint : 1, 1

